<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bentley.auth.host.HostMapper">
    <resultMap id="hostResultMap" type="com.bentley.auth.host.Host" autoMapping="true">
        <id property="id" column="id"/>
    </resultMap>

    <insert id="insert" parameterType="com.bentley.auth.host.Host" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO `host` (email, password, firstName, lastName, status, createdAt, updatedAt, deactivatedAt)
        VALUES (#{email}, #{password}, #{firstName}, #{lastName}, #{status}, #{createdAt}, #{updatedAt}, #{deactivatedAt})
    </insert>

    <select id="findById" parameterType="long" resultMap="hostResultMap">
        SELECT *
        FROM `host`
        WHERE id = #{id}
    </select>

    <select id="findByEmail" parameterType="string" resultMap="hostResultMap">
        SELECT *
        FROM `host`
        WHERE email = #{email}
    </select>
</mapper>
